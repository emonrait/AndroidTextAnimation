<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <yanzhikai.textpath.SyncTextPathView
        android:id="@+id/stpv_2017"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:duration="12000"
        app:showPainter="true"
        app:pathStrokeColor="@android:color/holo_blue_bright"
        app:text="LOGIN"
        app:textInCenter="true"
        app:textSize="60sp" />

    <yanzhikai.textpath.AsyncTextPathView
        android:id="@+id/atpv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:duration="12000"
        app:pathStrokeColor="@android:color/holo_blue_bright"
        app:showPainter="true"
        app:text="LOGIN"
        app:textInCenter="true"
        app:textSize="62sp" />

    <yanzhikai.textpath.AsyncPathView
        android:id="@+id/atpv_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:duration="12000"
        app:pathStrokeColor="@android:color/holo_blue_bright"
        app:showPainter="true"
        app:text="LOGIN"
        app:textInCenter="true"
        app:textSize="62sp" />

</LinearLayout>